<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/app_small_margin"
            android:visibility="visible"
            android:id="@+id/block_user_message"
            android:layout_width="wrap_content"
            android:layout_marginStart="110dp"
            android:background="@drawable/bg_user_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/chats_user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Привет я Макс"
                android:gravity="end"
                android:padding="@dimen/app_padding"
                android:textColor="@color/colorAccentDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        <TextView
                android:id="@+id/chats_user_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:gravity="end"
                android:textColor="@color/colorAccentDark"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/chats_user_message_name"
                app:layout_constraintTop_toBottomOf="@+id/chats_user_message" />

        <TextView
                android:id="@+id/chats_user_message_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="incursionin"
                android:paddingEnd="@dimen/app_padding"
                android:paddingLeft="@dimen/app_padding"
                android:gravity="center"
                android:textColor="@color/colorAccentDark"
                android:layout_marginEnd="@dimen/app_padding"
                app:layout_constraintTop_toBottomOf="@+id/chats_user_message"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/app_small_margin"
            android:visibility="visible"
            android:id="@+id/block_received_message"
            android:layout_width="wrap_content"
            android:layout_marginEnd="110dp"
            android:background="@drawable/bg_received_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/chats_received_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Здарова"
                android:gravity="end"
                android:padding="@dimen/app_padding"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        <TextView
                android:id="@+id/chats_received_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/chats_received_message_name"
                app:layout_constraintTop_toBottomOf="@+id/chats_received_message" />

        <TextView
                android:id="@+id/chats_received_message_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="incursionin"
                android:paddingEnd="@dimen/app_padding"
                android:paddingLeft="@dimen/app_padding"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintTop_toBottomOf="@+id/chats_received_message"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
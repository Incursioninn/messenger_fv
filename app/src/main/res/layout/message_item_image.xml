<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/block_received_image"
            android:layout_width="@dimen/chat_image_width"
            android:layout_margin="@dimen/app_small_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/chat_image_height">
        
        <ImageView
                android:id="@+id/chat_received_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="TODO" />


        <TextView
                android:id="@+id/chats_received_image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/chat_received_image" />

        <TextView
                android:id="@+id/chats_received_image_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="incursionin"
                android:paddingEnd="@dimen/app_padding"
                android:paddingRight="@dimen/app_padding"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="@dimen/app_padding"
                app:layout_constraintEnd_toStartOf="@id/chats_received_image_time"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/app_small_margin"
            android:id="@+id/block_user_image"
            android:layout_width="@dimen/chat_image_width"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/chat_image_height">

        <ImageView
                android:id="@+id/chat_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="TODO" />


        <TextView
                android:id="@+id/chats_user_image_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image" />
        <TextView
                android:id="@+id/chats_user_image_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="incursionin"
                android:paddingEnd="@dimen/app_padding"
                android:paddingRight="@dimen/app_padding"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="@dimen/app_padding"
                app:layout_constraintEnd_toStartOf="@id/chats_user_image_time"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
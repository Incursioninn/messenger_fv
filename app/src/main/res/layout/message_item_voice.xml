<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/block_received_voice"
            android:layout_width="250dp"
            android:layout_margin="@dimen/app_small_margin"
            android:background="@drawable/bg_received_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/chat_default_height">

        <ImageView
                android:id="@+id/chat_received_btn_play"
                android:layout_width="@dimen/chat_btn_default_width"
                android:layout_height="@dimen/chat_btn_default_height"
                android:src="@drawable/ic_baseline_play_circle_filled_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/chat_received_btn_stop"
                android:layout_width="@dimen/chat_btn_default_width"
                android:layout_height="@dimen/chat_btn_default_height"
                android:src="@drawable/ic_baseline_pause_circle_filled_24"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <TextView
                android:id="@+id/chats_received_voice_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/chats_received_voice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Maxim Subbotkin"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/block_user_voice"
            android:layout_width="250dp"
            android:layout_margin="@dimen/app_small_margin"
            android:background="@drawable/bg_user_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/chat_default_height">

        <ImageView
                android:id="@+id/chat_user_btn_play"
                android:layout_width="@dimen/chat_btn_default_width"
                android:layout_height="@dimen/chat_btn_default_height"
                android:src="@drawable/ic_baseline_play_circle_filled__user_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/chat_user_btn_stop"
                android:layout_width="@dimen/chat_btn_default_width"
                android:layout_height="@dimen/chat_btn_default_height"
                android:src="@drawable/ic_baseline_pause_circle_filled_user_24"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <TextView
                android:id="@+id/chats_user_voice_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="18:15"
                android:textColor="@color/colorAccentDark"
                android:gravity="end"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/chats_user_voice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Maxim Subbotkin"
                android:textColor="@color/colorAccentDark"
                android:gravity="center"
                android:layout_marginEnd="@dimen/app_small_margin"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
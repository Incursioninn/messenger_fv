<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        style="@style/settings_button"
        android:layout_margin="@dimen/app_margin"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_list_contact_photo"
            android:layout_width="@dimen/settings_user_photo_width"
            android:layout_height="@dimen/settings_user_photo_height"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_menu_contacts"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/main_list_item_name"
            style="@style/normal_text"
            tools:text="Item name"
            app:layout_constraintStart_toEndOf="@id/main_list_contact_photo"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/main_list_last_message"
            style="@style/small_text"
            tools:text="Last message"
            app:layout_constraintStart_toEndOf="@id/main_list_contact_photo"
            app:layout_constraintTop_toBottomOf="@id/main_list_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>